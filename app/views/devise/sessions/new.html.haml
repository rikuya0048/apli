.container
  .main
    .inner
      %h2 ログインする
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          = f.label :メールアドレス
          %br/
          = f.email_field :email, placeholder: "mail@address.com", autofocus: true, autocomplete: "email", class: "email"
        .field
          = f.label :パスワード
          %br/
          = f.password_field :password, placeholder: "********", autocomplete: "password", class: "password"
        .actions
          = f.submit "ログイン", class: "login-btn"

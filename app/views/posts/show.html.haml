.container
  .main 
    .postImage
      - if @post.image?
        = image_tag @post.image.url, size: "400x300", class: "post-image"
    .postTitle
      = @post.title
    .post-content

      .postCategory
        = @post.category.name
      .postAuthor
        = link_to @post.user.name, user_path(@post.user), class: "show"
        = link_to @post.price, card_path(@post.id), class: "buy-price"
        - if user_signed_in? && current_user.id == @post.user_id
          = link_to "編集", edit_post_path(@post.id), class: "postManage__edit"
          = link_to "削除", post_path(@post.id), method: :delete, class: "postManage__delete"
      .postGood
        評価
      .postText
        = simple_format @post.content

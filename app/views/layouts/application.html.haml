!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Apli

    %script{src: "https://js.pay.jp/", type: "text/javascript"}
    -# %script{type:"text/javascript"}Payjp.setPublicKey('pk_test_f0d7a1fca33f08a051b86659');
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %header.header
      = link_to "/" do
        = image_tag '/material/logo/water_character.png', size: "75x55", class: "logo"
      .header-btn
        - if user_signed_in?
          = link_to "マイページ", user_path(current_user), class: "btn"
          %i#show.fa.fa-user
          = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "btn"
          = link_to "投稿する", new_post_path, class: 'create'
        - else
          = link_to "新規会員登録", new_user_registration_path, class: "btn"
          = link_to "ログイン", new_user_session_path, class: "btn"
    %main= yield
    %footer.footer
